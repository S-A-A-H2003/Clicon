{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,//Change from true to false
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,//Change from true to false
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /*I'm Add*/
    "forceConsistentCasingInFileNames":true,
    "composite": true
  },
  "include": ["src"]
}
