{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,//Change from true to false
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,//Change from true to false

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /*I'm Add*/
    "forceConsistentCasingInFileNames":true,
    "composite": true
  },
  "include": ["vite.config.ts"]
}
